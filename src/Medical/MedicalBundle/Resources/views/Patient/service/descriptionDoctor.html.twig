            </svg>
        </div>
    </div>
    <section id="content" class="hg_section ptop-60" >
        <div class="container">
            <div class="row">
                <div class="right_sidebar col-md-12">
                    <div class="product">
                        <div class="row product-page">
                            <div class="single_product_main_image col-sm-5" style="margin-top:-300px;">
                                <div class="zn_badge_container"><span class="zonsale zn_badge_sale">PRO</span></div>
                                <div class="images" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
                                    <a href="{{ asset('images/sliders/doctor.jpg') }}" itemprop="image" class="kl-store-main-image zoom" title="">
                                        <img width="600" height="600" src="{{ asset('images/sliders/doctor.jpg') }}" class="attachment-shop_single wp-post-image" alt="image1xxl (1)" title="image1xxl (1)" data-o_src="{{asset('images/image1xxl-19-600x600.jpg') }}" data-o_title="image1xxl (1)" data-o_alt="image1xxl (1)" ></a>
                                    <div style="background-color:transparent; padding: 10px 0 10px 10px;">
                                    </div>
                                </div>
                            </div>
                            <div class="main-data col-sm-7">
                                <div class="summary entry-summary">
                                    <h1 itemprop="name" class="product_title entry-title">{{ doctor.firstname}} {{doctor.lastname}}</h1>
                                    <div class="product_meta" style="margin-bottom: 10px;">
                                        <h3>
                                            <span class="posted_in" style="display:block;">{{'appointment.doctor.spec'|trans}}: 
                                                <a href="" rel="tag">{{ doctor.speciality }}</a>
                                                <a href="{{ path('Patient_appointment') }}" rel="tag"><button type="submit" class="alt beg" style="margin-left:218px;"><span class="glyphicon glyphicon-arrow-left"></span> {{'appointment.doctor.rt'|trans}} </button></a>
                                            </span>
                                        </h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tabbable tabs_style1">
                            <ul class="nav fixclear">
                                <li class=""><a href="#tab-reviews" data-toggle="tab">{{'appointment.doctor.comm'|trans}}</a></li>
                                <li class=""><a href="#tab-description" data-toggle="tab">{{'appointment.doctor.des'|trans}}</a></li>
                                <li class=""><a href="#tab-Location" data-toggle="tab">{{'appointment.doctor.loc'|trans}}</a></li>
                                <li class="active"><a href="#tab-Calendar" data-toggle="tab">{{'appointment.doctor.cal'|trans}}</a></li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane taille" id="tab-description" style="">
                                    <div class="col-md-8 col-sm-12">
                                        <div class="services_box services_box--modern sb--hasicon" >
                                            <div class="services_box__inner clearfix">
                                                <div class="linee"></div>
                                                <div class="services_box__content" id="padding-md">
                                                    <div class="services_box__list-wrapper" >
                                                        <span class="services_box__list-bg"></span>
                                                        <ul class="services_box__list">
                                                            <li>
                                                                <span class="champ-doctor">{{'appointment.doctor.nm'|trans}} : </span>
                                                                <span class="description-doctor">{{ doctor.firstname}} {{doctor.lastname}}</span>
                                                            </li>
                                                            <li>
                                                                <span class="champ-doctor">{{'appointment.doctor.se'|trans}} : </span>
                                                                <span class="description-doctor">{% if(doctor.sex=='h')%}{{ doctor.sex }}Man{% elseif(doctor.sex=='f')%}Woman{% endif %}</span>
                                                            </li>
                                                            <li>
                                                                <span class="champ-doctor">Email : </span>
                                                                <span class="description-doctor">{{ doctor.email }}</span>
                                                            </li>
                                                            <li>
                                                                <span class="champ-doctor">{{'appointment.doctor.ad'|trans}} : </span>
                                                                <span class="description-doctor"> {{ doctor.adress }}</span>
                                                            </li>
                                                            <li>
                                                                <span class="champ-doctor">{{'appointment.doctor.ph'|trans}} : </span>
                                                                <span class="description-doctor">{{ doctor.tel }}</span>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane taille" id="tab-Location">
                                    <div class="kl-slideshow static-content__slideshow scontent__maps">
                                        <div class="th-google_map" style="height: 500px; opacity:.6;"> </div>
                                    </div>
                                </div>
                                <div class="tab-pane taille active" id="tab-Calendar" id="taille">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-md-4 col-sm-12" style="margin-top:-10px;margin-left: -20px;">
                                                {% for flashMessage in app.session.flashbag.get('success') %}
                                                    <div class="alert alert-success alert-dismissible animated bounceInLeft" role="alert">
                                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                        <strong>Sucess </strong>{{ flashMessage}}
                                                    </div>
                                                {% endfor %}
                                                {% for flashMessage in app.session.flashbag.get('echec') %}
                                                    <div class="alert alert-danger alert-dismissible animated bounceInLeft" role="alert" id="myalert">
                                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true" id="cl">&times;</span></button>
                                                        <strong>Echec </strong>{{ flashMessage}}
                                                    </div>
                                                {% endfor %}
                                                <style>
                                                    .bounceInLeft {
                                                        animation-delay: 1s;
                                                    }
                                                </style>
                                                {% include '::module/patient/calander.html.twig' %}
                                            </div>
                                            <div class="col-md-8 col-sm-12">
                                                <div id="setting">
                                                    <h3 style="text-align:center">{{ 'appointment.appoi.p1'|trans }}</br>{{ 'appointment.appoi.p2'|trans }}</h3>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane" id="tab-reviews">
                                    <div id="reviews">
                                        <div id="comments">
                                            {% for flashMessage in app.session.flashbag.get('suComm') %}
                                                <div class="alert alert-success alert-dismissible animated bounceInLeft" role="alert">
                                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                    <strong>Sucess </strong>{{ flashMessage}}
                                                </div>
                                            {% endfor %}
                                            {% if (commentaires |length >0) %}
                                                <ol class="commentlist">
                                                    {% for commentaire in commentaires %}
                                                        <li class="comment even thread-even depth-1">
                                                            <div id="comment-13">
                                                                <div class="comment_container clearfix">
                                                                    <img alt="" src="" srcset="{{ asset('uploads/'~commentaire.picture) }}" class="avatar avatar-60 photo" height="60" width="60"/>
                                                                    <div class="comment-text">
                                                                        <p class="meta"><strong itemprop="author">{{commentaire.username}}</strong> â€“ <time itemprop="datePublished" datetime="2013-06-07T13:03:29+00:00">{{commentaire.dateCom|date('l jS F Y')}}</time>:</p>
                                                                        <div itemprop="description" class="description">
                                                                            <p>{{commentaire.commentaire}}</p>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </li>
                                                    {% endfor %}
                                                </ol>
                                            {% else %}
                                                <div class="cd-fail-message">{{'appointment.doctor.nc'|trans}}</div>
                                            {% endif %}
                                        </div>
                                        <div class="clear"></div>
                                        <div id="respond" class="comment-respond">
                                            <h3 id="reply-title" class="comment-reply-title">{{'appointment.doctor.lr'|trans}} <small><a rel="nofollow" id="cancel-comment-reply-link" href="http://hogash-demos.com/demo/kwp/dramatically-integrate-viral-technologies/#respond" style="display:none;">Cancel reply</a></small></h3>
                                            <form action="{{ path('patient_Do_commentaire',{'id':doctor.id})}}" method="post" id="commentform" class="comment-form">
                                                <div class="row">
                                                    <div class="form-group col-sm-12">
                                                        <p class="comment-form-comment">
                                                            <label for="comment">{{'appointment.doctor.cm'|trans}}</label>
                                                            <textarea class="form-control" placeholder="Message:" id="comment" name="comment" cols="45" rows="8" aria-required="true" required="required"></textarea>
                                                        </p>
                                                    </div>
                                                </div>
                                                <p class="form-submit">
                                                    <input name="submit" type="submit" id="submit" class="btn btn-primary" value="{{'appointment.doctor.pm'|trans}}"/>
                                                    <input type="hidden" name="comment_post_ID" value="253" id="comment_post_ID"/>
                                                    <input type="hidden" name="comment_parent" id="comment_parent" value="0"/>
                                                </p>
                                                <input type="hidden" id="_wp_unfiltered_html_comment_disabled" name="_wp_unfiltered_html_comment" value="069422a49e">
                                            </form>
                                        </div>
                                        <div class="clear"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
