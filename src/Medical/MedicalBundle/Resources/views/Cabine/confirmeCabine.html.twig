{% extends '::Layout/confirme.html.twig' %}

{% block title %}Secretary | Basket{% endblock %}
{% block help %}{% include '::module/Cabine/helpCabine.html.twig' %}{% endblock %}
{% block menu %}{% include '::module/Cabine/headerCabine.html.twig' %}{% endblock %}
{% block body %}
    <section id="content" class="hg_section ptop-60">
        <div class="container">
            <div class="row">
                <div class="right_sidebar col-md-9" style="margin-right: -100px;">
                    <div class="kl-title-block clearfix text-left tbk-symbol--line tbk-icon-pos--after-title">
                        <h2 class="tbk__title montserrat fs-34 fw-semibold black">YOUR PERSONAL BASKET</h2>
                        <span class="tbk__symbol "><span></span></span>
                        <h4 class="tbk__subtitle fs-22 fw-thin">Let's see what we've got inside.</h4>
                    </div>
                    <div class="text_box">
                        <div class="kl-store">
                            <form action="#" method="post" class="mb-50">
                                <table class="shop_table cart" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th class="product-remove">&nbsp;</th>
                                            <th class="product-thumbnail">&nbsp;</th>
                                            <th class="product-name">Product</th>
                                            <th class="product-price">Price</th>
                                            <th class="product-quantity">Quantity</th>
                                            <th class="product-subtotal">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for i in 1..5 %}
                                            <tr class="cart_item">
                                                <td class="product-remove"><a href="" class="remove" title="Remove this item" data-product_id="22" data-product_sku=""><span class="glyphicon glyphicon-remove" style="color:#2980b8;"></span></a></td>
                                                <td class="product-thumbnail"><a href=""><img width="180" height="180" src="{{asset('images/banner-set1-1.jpg') }}" class="attachment-shop_thumbnail wp-post-image" alt="image1xxl"></a></td>
                                                <td class="product-name">
                                                    <a href="">Black Kaviar Longline Shirt </a>
                                                    <dl class="variation">
                                                        <dt class="variation-color">color:</dt>
                                                        <dd class="variation-color">
                                                            <p>Green</p>
                                                        </dd>
                                                    </dl>
                                                </td>
                                                <td class="product-price"><span class="amount">£20.00</span></td>
                                                <td class="product-quantity">
                                                    <div class="quantity"><input type="number" step="1" min="0" name="cart[bdbf73b3ab031409257f2c2d850f8ac2][qty]" value="1" title="Qty" class="input-text qty text" size="4"></div>
                                                </td>
                                                <td class="product-subtotal"><span class="amount">£20.00</span></td>
                                            </tr>
                                        {% endfor %}
                                        <tr>
                                            <td colspan="6" class="actions">
                                                <div class="coupon"><label for="coupon_code">Coupon:</label><input type="text" name="coupon_code" class="input-text" id="coupon_code" value="" placeholder="Coupon code"><input type="submit" class="button" name="apply_coupon" value="Apply Coupon"></div>
                                                <input type="submit" class="button" name="update_cart" value="Update Cart"><input type="hidden" id="_wpnonce" name="_wpnonce" value="1b98fc7d5b"><input type="hidden" name="_wp_http_referer" value="/demo/cart/">
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-md-3" style="margin-top: 140px; ">
                    <div class="cart-collaterals">
                        <div class="cart_totals">
                            <h2>Cart Totals</h2>
                            <table cellspacing="0" class="mb-30">
                                <tbody>
                                    <tr class="cart-subtotal">
                                        <th>Subtotal</th>
                                        <td><span class="amount">£50.00</span></td>
                                    </tr>
                                    <tr class="shipping">
                                        <th>Shipping</th>
                                        <td>
                                            Free Shipping <input type="hidden" name="shipping_method[0]" data-index="0" id="shipping_method_0" value="free_shipping" class="shipping_method">
                                            <form class="kl-store-shipping-calculator" action="" method="post">
                                                <p><a href="#" class="shipping-calculator-button">Calculate Shipping</a></p>
                                            </form>
                                        </td>
                                    </tr>
                                    <tr class="order-total">
                                        <th>Total</th>
                                        <td><strong><span class="amount">£50.00</span></strong></td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="wc-proceed-to-checkout" style="width:200px;">
                                <a href="" class="checkout-button button alt wc-forward">Proceed to Checkout</a></div>
                        </div>
                    </div>                        
                </div>
            </div>
    </section>
{% endblock %}
