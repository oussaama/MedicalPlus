        <script>
            $("#cares").addClass("activeItem");
            $(".main-menu li#cares").css("background", "#2980b8");</script>
        <script>
            $(function () {
                $('.sortTable').tablesorter({
                    widgets: ["uitheme", "columns", "filter", "resizable", "stickyHeaders"],
                    headers: {
                        0: {
                            sorter: 'number',
