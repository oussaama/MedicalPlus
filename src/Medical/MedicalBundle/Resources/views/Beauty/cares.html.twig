                            sorter: "digit",
                            filter: true
                        },
                        2: {
                            sorter: "digit",
                            filter: true
                        },
                        3: {
                            sorter: "text",
                            filter: true
                        }
                        ,
                        4: {
                            sorter: "text",
                            filter: true
                        },
                        5: {
                            sorter: "text",
