<!DOCTYPE html>
<html lang="en">
    <head>        
        <title>{% block title %}{% endblock %}</title>            
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="icon" href="{{ asset('admin/favicon.ico') }}" type="image/x-icon" />  
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" media="all" />
        <link rel="stylesheet" type="text/css" id="theme" href="{{ asset('admin/css/theme-default.css') }}"/>                                    
    </head>
    <body>
        <div class="page-container">
            <div class="page-sidebar">
                <ul class="x-navigation">
                    <li class="xn-logo">
                        <a href="{{ path('admin_homepage') }}">{{ app.user.firstname}} {{ app.user.lastname }}</a>
                        <a href="#" class="x-navigation-control"></a>
                    </li>
                    <li class="xn-profile">
                        <a href="#" class="profile-mini" >
                            <img src="{{ asset('uploads/'~app.user.picture) }}" alt="administrator" style="border:none;"/>
                        </a>
                        <div class="profile">
                            <div class="profile-image" style="border:none;">
                                <img src="{{ asset('uploads/'~app.user.picture) }}" alt="administrator" style="border:none;"/>
                            </div>
                            <div class="profile-data">
                                <div class="profile-data-name">John Doe</div>
                            </div>
                            <div class="profile-controls">
                                <a href="" class="profile-control-left"><span class="fa fa-info"></span></a>
                                <a href="{{ path('admin_inbox') }}" class="profile-control-right"><span class="fa fa-envelope"></span></a>
                            </div>
                        </div>                                                                        
                    </li>
                    <li class="xn-title">Navigation</li>
                    <li class="">
                        <a href="{{ path('admin_homepage') }}"><span class="fa fa-desktop"></span> <span class="xn-text">Dashboard</span></a>                        
                    </li>  
                    <li class="xn-openable">
                        <a href="#"><span class="fa fa-envelope"></span> <span class="xn-text"> Mailbox</span></a>
                        <ul>
                            <li><a href="{{ path('admin_inbox') }}"><span class="fa fa-inbox"></span>Inbox</a></li>
                            <li><a href="{{ path('admin_compose') }}"><span class="fa fa-pencil"></span>Compose</a></li>
                        </ul>
                    </li>                  
                    <li>
                        <a href="{{ path('admin_user') }}"><span class="fa fa-user"></span><span class="xn-text">User</span></a>
                    </li>
                    <li><a href="{{ path('admin_article') }}"><span class="fa fa-files-o"></span><span class="xn-text"> Article</span></a></li>
                    <li><a href="{{ path('admin_bill') }}"><span class="fa fa-file-text"></span><span class="xn-text">Bill</span></a></li>
                </ul>
            </div>

        {% block body %}{% endblock %}
    </div>
    <div class="message-box animated fadeIn" data-sound="alert" id="mb-signout">
        <div class="mb-container">
            <div class="mb-middle">
                <div class="mb-title"><span class="fa fa-sign-out"></span> Log <strong>Out</strong> ?</div>
                <div class="mb-content">
                    <p>Are you sure you want to log out?</p>                    
                    <p>Press No if youwant to continue work. Press Yes to logout current user.</p>
                </div>
                <div class="mb-footer">
                    <div class="pull-right">
                        <a href="{{ path('fos_user_security_logout') }}" class="btn btn-success btn-lg">Yes</a>
                        <button class="btn btn-default btn-lg mb-control-close">No</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <audio id="audio-alert" src="{{ asset('admin/audio/alert.mp3') }}" preload="auto"></audio>
    <audio id="audio-fail" src="{{ asset('admin/audio/fail.mp3') }}" preload="auto"></audio>
    <script type="text/javascript" src="{{ asset('admin/js/plugins/jquery/jquery.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('admin/js/plugins/jquery/jquery-ui.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('admin/js/plugins/bootstrap/bootstrap.min.js') }}"></script>              
    <script type="text/javascript" src="{{ asset('admin/js/settings.js') }}"></script>
    <script type="text/javascript" src="{{ asset('admin/js/plugins.js') }}"></script>        
    <script type="text/javascript" src="{{ asset('admin/js/actions.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/notif/notifadmin.js') }}"></script>

{% block javascript %}{% endblock %}
</body>
</html>


