{% set total=0 %}
{% set params = app.request.attributes.get('_route_params')|merge(app.request.query.all()) %}
{% set frParams = params|merge({'_locale': 'fr'}) %}
{% set enParams = params|merge({'_locale': 'en'}) %}
<header id="header" class="site-header cta_button">
    <div class="kl-header-bg"></div>
    <div class="container siteheader-container">
        <div class="kl-top-header clearfix">
            <div class="header-links-container">
                <ul class="topnav navRight topnav">
                    <li><a class="" href="{{ path('fos_user_security_logout') }}">{{ 'header.head.log'|trans }}</a></li>
                </ul>
                <ul class="topnav navLeft topnav--lang">
                    <li class="languages drop">
                        <a href="#">
                            <span class="glyphicon glyphicon-globe icon-white xs-icon"></span>
                            <span class="hidden-xs">{{ 'header.head.lang'|trans }}</span>
                        </a>
                        <div class="pPanel">
                            <ul class="inner">
                                {% if(app.request.locale == "en") %}
                                    <li class="toplang-item active">
                                        <a href="{{ path(app.request.attributes.get('_route'), enParams) }}"><img src="{{ asset('images/en.png') }}" alt="{{ 'header.head.langEn'|trans }}" class="toplang-flag" width="18" height="12"/> {{ 'header.head.langEn'|trans }}<span class="glyphicon glyphicon-ok"></span></a>
                                    </li>
                                    <li class="toplang-item ">
                                        <a href="{{ path(app.request.attributes.get('_route'), frParams) }}"><img src="{{ asset('images/fr.png') }}" alt="{{ 'header.head.langFr'|trans }}" class="toplang-flag" width="18" height="12" /> {{ 'header.head.langFr'|trans }}</a>
                                    </li>
                                {% else %}
                                    <li class="toplang-item ">
                                        <a href="{{ path(app.request.attributes.get('_route'), enParams) }}"><img src="{{ asset('images/en.png') }}" alt="{{ 'header.head.langEn'|trans }}" class="toplang-flag" width="18" height="12" /> {{ 'header.head.langEn'|trans }}</a>
                                    </li>
                                    <li class="toplang-item active">
                                        <a href="{{ path(app.request.attributes.get('_route'), frParams) }}"><img src="{{ asset('images/fr.png') }}" alt="{{ 'header.head.langFr'|trans }}" class="toplang-flag" width="18" height="12" /> {{ 'header.head.langFr'|trans }}<span class="glyphicon glyphicon-ok"></span></a>
                                    </li>
                                {% endif %}
                            </ul>
                        </div>
                    </li>
                </ul>
                <div id="search" class="header-search">
                    <a href="#" class="searchBtn ">
                        <span class="glyphicon glyphicon-search icon-white"></span>
                    </a>
                    <div class="search-container">
                        <form id="searchform" class="header-searchform" action="http://www.google.com/search" method="get" onSubmit="Gsitesearch(this)" target="_blank">
                            <input name="s" maxlength="20" class="inputbox" type="text" size="20" value="{{ 'header.head.sea'|trans }} ..." onblur="if (this.value == '')
                                        this.value = '{{ 'header.head.sea'|trans }} ...';" onfocus="if (this.value == '{{ 'header.head.sea'|trans }} ...')
                                                    this.value = '';">
                            <button type="submit" id="searchsubmit" class="searchsubmit glyphicon glyphicon-search icon-white"></button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="header-leftside-container ">
                <ul class="social-icons sc--clean topnav navRight" style="margin-top:3px;">
                    <li><a href="#" target="_self" class="" title="Facebook"><i class="fa fa-facebook"></i></a></li>
                    <li><a href="#" target="_self" class="" title="Twitter"><i class="fa fa-twitter"></i></a></li>
                    <li><a href="#" target="_self" class="" title="Pinterest"><i class="fa fa-pinterest"></i></a></li>
                    <li><a href="#" target="_blank" class="" title="Google Plus"><i class="fa fa-google-plus"></i></a></li>
                </ul>
                <div class="clearfix visible-xxs"></div>
                <span class="kl-header-toptext">{{ 'header.head.call'|trans }} <a href="#" class="fw-bold">71 000 000</a></span>
            </div>
        </div>
        <div class="separator"></div>
        <div class="logo-container hasInfoCard logosize--yes">
            <h1 class="site-logo logo " id="logo">
                <a href="{{ path('Patient_homepage') }}">
                    <img class="logo-img" src="{{ asset('images/logo.png') }}" alt="Medical+" title="Medical+" width="125" height="55" style="margin-top: -18px;">
                </a>
            </h1>
            <div id="infocard" class="logo-infocard">
                <div class="custom">
                    <div class="row">
                        <div class="col-sm-5">
                            <p>&nbsp;</p>
                            <p style="text-align: center;margin-top:-40px;">
                                <img src="{{ asset('images/logo.png') }}" alt="" width="150" height="50">
                            </p>
                            <p style="text-align: center;">{{'index.head.sd'|trans }}</p>
                        </div>
                        <div class="col-sm-7">
                            <div class="custom contact-details">
                                <p><strong>Tel: (212) 71 000 000</strong><br>
                                    Email:&nbsp;<a href="mailto:sales@yourwebsite.com">{{ 'footer.info.email'|trans }}</a>
                                </p>
                                <p>{{ 'header.menu.profil.ad'|trans }}<br>{{ 'footer.info.adress' |trans }}</p>
                                <a href="http://goo.gl/maps/1OhOu" target="_blank" class="map-link">
                                    <span class="glyphicon glyphicon-map-marker icon-white"></span>
                                    <span> Open in Google Maps</span>
                                </a>
                            </div>
                            <div style="height:20px;"></div>
                            <ul class="social-icons sc--clean">
                                <li><a href="#" target="_self" class="" title="Facebook"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="#" target="_self" class="" title="Twitter"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="#" target="_self" class="" title="Pinterest"><i class="fa fa-pinterest"></i></a></li>
                                <li><a href="#" target="_blank" class="" title="Google Plus"><i class="fa fa-google-plus"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="separator visible-xxs"></div>
        <div id="zn-res-menuwrapper">
            <a href="#" class="zn-res-trigger zn-header-icon"></a>
        </div>
        <!-- bar de menu-->
        <div id="main-menu" class="main-nav zn_mega_wrapper">
            <ul id="menu-main-menu" class="main-menu zn_mega_menu">
                <li class="menu-item-has-children" id="home"><a href="{{ path('Patient_homepage') }}">{{ 'header.menu.index'|trans }}</a></li>
                <li class="menu-item-has-children" id="service"><a href="{{ path('Patient_service') }}">{{ 'header.menu.directory'|trans }}</a>
                    <ul class="sub-menu clearfix">
                        <li><a href="{{ path('Patient_appointment') }}">{{ 'header.menu.rendez'|trans }}</a></li>
                        <li><a href="{{ path('Patient_ServicePharmacy') }}">{{ 'header.menu.ph'|trans }}</a></li>
                        <li><a href="{{ path('Patient_ServiceBeauty') }}">{{ 'header.menu.be'|trans }}</a></li>
                        <li><a href="{{ path('Patient_ServiceClinical') }}">{{ 'header.menu.cl'|trans }}</a></li>
                        <li><a href="{{ path('Patient_ServiceHospital') }}">{{ 'header.menu.h'|trans }}</a></li>
                        <li><a href="{{ path('Patient_ServiceLaboratory') }}">{{ 'header.menu.lab'|trans }}</a></li>
                    </ul>
                </li>
                <li class="menu-item-has-children" id="news"><a href="{{ path('medical_news') }}">{{ 'header.menu.news'|trans }}</a></li>
                <li class="menu-item-has-children" id="promo"><a href="{{ path('Patient_promo') }}">{{ 'header.menu.promo'|trans }}</a></li>
                <li class="menu-item-has-children" id="about"><a href="{{ path('medical_about') }}">{{ 'header.menu.about'|trans }}</a></li>
                <li class="menu-item-has-children" id="contact"><a href="{{ path('contact_new') }}">CONTACT</a></li>
            </ul>
        </div>


        <a href="{{ path ('profil',{'id':app.user.id})}}" id="tabutton" class="tabutton" title="GET A FREE QUOTE" target="_self" style="margin-top: -15px;">
            <img src="{{ asset('uploads/'~ app.user.picture)}}"  alt="{{ app.user.username }}" title="{{ app.user.username }}" style="margin-top: 15px; height:40px;">
            <span class="hidden-xs" style="font-size:14px;text-align: center;">{{ app.user.username }}</span>
        </a>
        <ul class="topnav navLeft topnav--cart" style="">
            <li class="drop">
                {% if (panier|length>0) %}
                    <a id="mycartbtn" class="kl-cart-button" href="#" title="View your shopping cart">
                        <i class="yes glyphicon glyphicon-shopping-cart icon-white flipX-icon sm-icon" data-count="{{ panier | length}}"></i>
                    </a>
                {% else %}
                    <a id="mycartbtn" class="kl-cart-button" href="#" title="View your shopping cart">
                        <i class="glyphicon glyphicon-shopping-cart icon-white flipX-icon sm-icon" data-count=""></i>
                    </a>
                {% endif %}
                <div class="pPanel">
                    <div class="inner cart-container">
                        <div class="widget_shopping_cart_content">
                            <ul class="cart_list product_list_widget">
                                {% for produit in panier %}
                                    <li>
                                        <a href="#" class="remove" title="Remove this item"></a>
                                        <a href="#"><img width="90" height="90" src="{{ asset('uploads/medicament/'~produit.photoMed) }}" class="attachment-shop_thumbnail" alt="img4">{{ produit.nomMed}}</a>
                                        <span class="quantity">{{ produit.stockP }} Ã— <span class="amount">{{ produit.prixMed }}DT</span></span>
                                        {% set total =total+produit.stockP*produit.prixMed %}
                                    </li>
                                {% endfor %}
                            </ul>
                            <p class="total"><strong>{{ 'header.head.sub'|trans }}</strong><span class="amount">{{ total }}DT</span></p>
                        </div>
                    </div>
                </div>
            </li>
            <li class="drop">
                {% if mb>0 %}
                    <a href="{{ path('medical_message') }}"class="kl-cart-button" title="View your message">
                        <i id="message" class="yes glyphicon glyphicon-envelope icon-white flipX-icon sm-icon" data-count=""></i>
                    </a>
                {% else%}
                    <a href="{{ path('medical_message') }}"class="kl-cart-button" title="View your message">
                        <i id="message" class="glyphicon glyphicon-envelope icon-white flipX-icon sm-icon" data-count=""></i>
                    </a>
                {% endif %}
                <div class="pPanel">
                    <div class="inner cart-container">
                        <div class="widget_shopping_cart_content">
                            <ul class="cart_list product_list_widget">
                                {% for message in messages %}
                                    <li>
                                        <a href="#" class="remove" title="Remove this item"></a>
                                        <a href="#"><img width="90" height="90" src="{{ asset('uploads/'~message.picture) }}" class="attachment-shop_thumbnail" alt="img4">{{ message.firstnameCont}} {{ message.lastnameCont}}  <span class="quantity">({{ message.subjectCont }})</span></a>
                                        <span class="quantity"><span class="amount">{{ message.dateCont | date('g:i a  l jS F Y') }}</span></span>
                                    </li>
                                {% endfor %}
                            </ul>
                            <p class="" style="margin-bottom: -10px;">
                                <a href="{{ path('medical_message') }}" class="wc-forward" style="margin-left:100px;"> More Message</a>
                            </p>
                        </div>
                    </div>
                </div>
            </li>
            <li class="drop">
                {% if nb>0 %}
                    <a href="{{ path('medical_notification') }}" class="kl-cart-button" href="#" title="View your Notification">
                        <i id="not" class="yes glyphicon glyphicon-info-sign icon-white flipX-icon sm-icon" data-count=""></i>
                    </a>
                {% else %}
                    <a href="{{ path('medical_notification') }}" class="kl-cart-button" href="#" title="View your Notification">
                        <i id="not" class="glyphicon glyphicon-info-sign icon-white flipX-icon sm-icon" data-count=""></i>
                    </a>
                {% endif %}
                <div class="pPanel">
                    <div class="inner cart-container">
                        <div class="widget_shopping_cart_content">
                            <ul class="cart_list product_list_widget">
                                {% for notif in notifs %}
                                    <li>
                                        <a href="#" class="remove" title="Remove this item"></a>
                                        <a href="#"><img width="90" height="90" src="{{ asset('uploads/'~notif.picture) }}" class="attachment-shop_thumbnail" alt="img4">{{ notif.expediteur}}  <span class="quantity">({{ notif.sujetNot }})</span></a>
                                        <span class="amount">{{ notif.dateNot | date('g:ial jS F Y') }}</span>
                                    </li>
                                {% endfor %}
                            </ul>
                            <p class="" style="margin-bottom: -10px;">
                                <a href="{{ path('medical_notification') }}" class="wc-forward" style="margin-left:100px;"> More Notification</a>
                            </p>
                        </div>
                    </div>
                </div>
            </li>

        </ul>
    </div>
</header>

