{% set params = app.request.attributes.get('_route_params')|merge(app.request.query.all()) %}
{% set frParams = params|merge({'_locale': 'fr'}) %}
{% set enParams = params|merge({'_locale': 'en'}) %}
<html>
    <head>
        <title>{{'index.head.log'|trans }}</title>
        <meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" type="text/css" media="all"/>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css"/>
        <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" type="text/css" media="all"/>
        <link rel="stylesheet" href="{{ asset('css/responsive.css') }}" type="text/css" media="all"/>
        <link rel="stylesheet" href="{{ asset('css/base-sizing.css') }}" type="text/css" media="all"/>
        <link rel="stylesheet" href="{{ asset('css/updates.css') }}" type="text/css"/>
        <link rel="stylesheet" href="{{ asset('css/custom.css') }}" type="text/css"/>
        <link rel="stylesheet" href="{{ asset('css/style.css') }}" type="text/css" media="all"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('css/template1.css') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('css/customs.css') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('css/animate.min.css') }}" />
    <body>
        <div class="container-full">
            <header id="header" class="site-header cta_button">
                <div class="kl-header-bg"></div>
                <div class="container siteheader-container">
                    <div class="kl-top-header clearfix" style="border-bottom: 1px solid #A5A5A5;">
                        <div class="header-links-container">
                            <ul class="topnav navRight topnav">
                                <li><a class="popup-with-form" href="{{ path('fos_user_security_login')}}">{{ 'index.head.log'|trans }}</a></li>
                                <li><a class="popup-with-form" href="{{ path('fos_user_registration_register')}}">{{ 'index.head.reg'|trans }}</a></li>
                            </ul>
                            <ul class="topnav navLeft topnav--lang">
                                <li class="languages drop">
                                    <a href="#">
                                        <span class="glyphicon glyphicon-globe icon-white xs-icon"></span>
                                        <span class="hidden-xs">{{ 'header.head.lang'|trans }}</span>
                                    </a>
                                    <div class="pPanel">
                                        <ul class="inner">
                                            {% if(app.request.locale == "en") %}
                                                <li class="toplang-item active">
                                                    <a href="{{ path(app.request.attributes.get('_route'), enParams) }}"><img src="{{ asset('images/en.png') }}" alt="{{ 'header.head.langEn'|trans }}" class="toplang-flag" width="18" height="12"/> {{ 'header.head.langEn'|trans }}<span class="glyphicon glyphicon-ok"></span></a>
                                                </li>
                                                <li class="toplang-item ">
                                                    <a href="{{ path(app.request.attributes.get('_route'), frParams) }}"><img src="{{ asset('images/fr.png') }}" alt="{{ 'header.head.langFr'|trans }}" class="toplang-flag" width="18" height="12" /> {{ 'header.head.langFr'|trans }}</a>
                                                </li>
                                            {% else %}
                                                <li class="toplang-item ">
                                                    <a href="{{ path(app.request.attributes.get('_route'), enParams) }}"><img src="{{ asset('images/en.png') }}" alt="{{ 'header.head.langEn'|trans }}" class="toplang-flag" width="18" height="12" /> {{ 'header.head.langEn'|trans }}</a>
                                                </li>
                                                <li class="toplang-item active">
                                                    <a href="{{ path(app.request.attributes.get('_route'), frParams) }}"><img src="{{ asset('images/fr.png') }}" alt="{{ 'header.head.langFr'|trans }}" class="toplang-flag" width="18" height="12" /> {{ 'header.head.langFr'|trans }}<span class="glyphicon glyphicon-ok"></span></a>
                                                </li>
                                            {% endif %}
                                        </ul>
                                    </div>
                                </li>
                            </ul>
                        </div>
                        <div class="header-leftside-container ">
                            <ul class="social-icons sc--clean topnav navRight" style="margin-top: 7px;">
                                <li><a href="#" target="_self" class="" title="Facebook"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="#" target="_self" class="" title="Twitter"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="#" target="_self" class="" title="Pinterest"><i class="fa fa-pinterest"></i></a></li>
                                <li><a href="#" target="_blank" class="" title="Google Plus"><i class="fa fa-google-plus"></i></a></li>
                            </ul>
                            <span class="kl-header-toptext">{{ 'header.head.call'|trans }} <a href="#" class="fw-bold">71 000 000</a></span>
                        </div>
                    </div>
                    <div class="logo-container hasInfoCard logosize--yes">
                        <h1 class="site-logo logo " id="logo">
                            <a href="index.html">
                                <img class="logo-img" src="{{ asset('images/logo.png') }}" alt="Medical+" title="Medical+" width="125" height="55">
                            </a>
                        </h1>
                        <div id="infocard" class="logo-infocard">
                            <div class="custom">
                                <div class="row">
                                    <div class="col-sm-5">
                                        <p>&nbsp;</p>
                                        <p style="text-align: center;">
                                            <img src="{{ asset('images/logo.png') }}" alt="" width="53" height="53">
                                        </p>
                                        <p style="text-align: center;">{{'index.head.sd'|trans }}</p>
                                    </div>
                                    <div class="col-sm-7">
                                        <div class="custom contact-details">
                                            <p><strong>T (216) 71 000 000</strong><br>
                                                Email:&nbsp;<a href="mailto:sales@yourwebsite.com">{{ 'footer.info.email'|trans }}</a>
                                            </p>
                                            <p>{{ 'header.menu.profil.ad'|trans }}<br>{{ 'footer.info.adress' |trans }}:</p>
                                            <a href="http://goo.gl/maps/1OhOu" target="_blank" class="map-link">
                                                <span class="glyphicon glyphicon-map-marker icon-white"></span>
                                                <span> Open in Google Maps</span>
                                            </a>
                                        </div>
                                        <div style="height:20px;"></div>
                                        <ul class="social-icons sc--clean">
                                            <li><a href="#" target="_self" class="" title="Facebook"><i class="fa fa-facebook"></i></a></li>
                                            <li><a href="#" target="_self" class="" title="Twitter"><i class="fa fa-twitter"></i></a></li>
                                            <li><a href="#" target="_self" class="" title="Pinterest"><i class="fa fa-pinterest"></i></a></li>
                                            <li><a href="#" target="_blank" class="" title="Google Plus"><i class="fa fa-google-plus"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="separator visible-xxs"></div>
                    <div id="zn-res-menuwrapper">
                        <a href="#" class="zn-res-trigger zn-header-icon"></a>
                    </div>  
            </header>
            <img src="{{ asset('images/sliders/ins.jpg') }}" style="-webkit-filter: blur(5px);"/>
            <div class="col-xs-12 col-sm-4 col-sm-offset-4 animated bounceInDown" style="margin-top:-40%;background: rgba(255,255,255,0.6);padding-top:30px;">
                {% if error %}
                    <div class="alert alert-danger alert-dismissible col xs-12" role="alert" style="width:400px;margin-bottom:30px;">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <strong>{{'index.form.logm'|trans}}</strong>
                    </div>
                {% endif %}

                <div class="col-sm-12">
                    {% if app.request.hasPreviousSession %}
                        {% for type, messages in app.session.flashbag.all() %}
                            {% for message in messages %}
                                <div class="alert alert-info alert-dismissible" role="alert" style="width:400px;">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <strong>{{ message }}</strong>
                                </div>
                            {% endfor %}
                        {% endfor %}
                    {% endif %}
                    <div class="contactForm">
                        <form action="{{ path("fos_user_security_check") }}" class="contact_form row" method="post">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                            <div class="cf_response"></div>
                            <p class="col-sm-12 kl-fancy-form">
                                <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="{{ 'index.form.userp'|trans }}" tabindex="1" maxlength="35" required="required" />
                                <label class="control-label">{{ 'index.form.username'|trans }}</label>
                            </p>

                            <p class="col-sm-12 kl-fancy-form">
                                <input type="password" class="form-control" id="password" name="_password" placeholder="{{ 'index.form.passp'|trans }}" tabindex="1" maxlength="35" required="required" />
                                <label for="password">{{ 'index.form.password'|trans }}</label>       
                            </p>
                            <p class="col-sm-12">
                                <input type="checkbox" id="remember_me" name="_remember_me" value="on" class="" style="padding: 12px;" />
                                <label for="remember_me" style="font-size:16px;font-weight: 600;margin-left:10px;">{{ 'index.form.remember'|trans }}</label>
                            </p>
                            <p class="clear"></p>
                            <p class="col-sm-6 kl-fancy-form">
                                <a href="{{ path('fos_user_resetting_request') }}" class="various fancybox.ajax"><span class="password-forgot">Mot de passe perdu ?</span></a>
                            </p>
                            <p class="col-sm-6 kl-fancy-form">
                                <input type="submit" class="btn btn-fullcolor pull-right position-action" value="{{ 'index.form.login'|trans}}"/>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <style>
            html {
                height: 100%;
                overflow: hidden;
            }
        </style>
    </body>
</html>
